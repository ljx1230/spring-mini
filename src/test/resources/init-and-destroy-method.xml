<?xml version="1.0" encoding="UTF-8"?>
<beans >

    <bean id="person" class="com.ljx.springframework.test.ioc.bean.Person" init-method="customInitMethod" destroy-method="customDestroyMethod">
        <property name="name" value="ljx"/>
        <property name="age" value="21"/>
        <property name="car" ref="car"/>
    </bean>

    <bean id="car" class="com.ljx.springframework.test.ioc.bean.Car">
        <property name="brand" value="byd"/>
    </bean>

</beans>